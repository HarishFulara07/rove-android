<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gursimransinghhanspal.rove.activity.LoginViaFacebook">

    <include
        layout="@layout/view_statusbar_underlay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@color/clr_transparent"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <!--<include-->
            <!--android:id="activity_loginViaFacebook_back_btn"-->
            <!--layout="@layout/button_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_julius_sans"
            android:text="@string/welcome_text"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <include
        layout="@layout/view_navbar_underlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</LinearLayout>
