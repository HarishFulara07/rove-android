<resources>
    <!-- Base application theme. -->
    <style name="Rove.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <!-- Splash theme. -->
    <style name="Rove.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_splash_theme_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- No ActionBar with Solid Bg theme. -->
    <style name="Rove.NoActionBarSolidBg" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bgColor</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Text -->
    <style name="text_h1">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/julius_sans_one</item>
    </style>
    <style name="text_h2">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>
